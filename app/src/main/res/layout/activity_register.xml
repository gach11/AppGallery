<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proximar"
        android:text="@string/createaccout"
        android:textColor="#B0000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217" />

    <EditText
        android:id="@+id/inputfullname"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/c_input2"
        android:drawableStart="@drawable/c_fname"
        android:drawablePadding="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:ems="10"
        android:maxLength="50"
        android:fontFamily="@font/proximar"
        android:hint="@string/fullname"
        android:inputType="textCapSentences"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/inputemail"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/c_input2"
        android:drawableStart="@drawable/c_email"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/proximar"
        android:hint="@string/email"
        android:maxLength="50"
        android:inputType="textEmailAddress"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputfullname"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/inputpw"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/c_input2"
        android:drawableStart="@drawable/c_lock"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/proximar"
        android:hint="@string/pw"
        android:maxLength="30"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputemail"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/inputconfirmpw"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/c_input2"
        android:drawableStart="@drawable/c_lock"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/proximar"
        android:hint="@string/confirmpw"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:maxLength="30"
        android:paddingEnd="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputpw"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Register"
        android:layout_width="101dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="#DD000000"
        android:fontFamily="@font/proximar"
        android:text="Signup"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputconfirmpw"
        app:layout_constraintVertical_bias="0.0" />

    <com.agrawalsuneet.dotsloader.loaders.LazyLoader
        android:id="@+id/progressBar"
        android:layout_width="27dp"
        android:layout_height="21dp"
        android:layout_margin="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Register"
        app:layout_constraintVertical_bias="0.416"
        app:lazyloader_animDur="400"
        app:lazyloader_dotsDist="1dp"
        app:lazyloader_dotsRadius="3dp"
        app:lazyloader_firstDelayDur="100"
        app:lazyloader_firstDotColor="@color/colorPrimary"
        app:lazyloader_interpolator="@android:anim/decelerate_interpolator"
        app:lazyloader_secondDelayDur="200"
        app:lazyloader_secondDotColor="@color/colorPrimary"
        app:lazyloader_thirdDotColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proximar"
        android:text="Back"
        android:textColor="#B0000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Register"
        app:layout_constraintVertical_bias="0.345" />


</androidx.constraintlayout.widget.ConstraintLayout>