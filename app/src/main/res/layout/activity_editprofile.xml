<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Editprofile">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proximar"
        android:text="@string/updateprof"
        android:textColor="#B0000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <EditText
        android:id="@+id/updateUsername"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:background="@drawable/c_input2"
        android:drawableStart="@drawable/c_uusername"
        android:drawablePadding="5dp"
        android:ems="10"
        android:maxLength="10"
        android:fontFamily="@font/proximar"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changedp"
        app:layout_constraintVertical_bias="0.115" />

    <EditText
        android:id="@+id/updatePhone"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/c_input2"
        android:drawableStart="@drawable/c_phone"
        android:drawablePadding="5dp"
        android:ems="10"
        android:maxLength="11"
        android:fontFamily="@font/proximar"
        android:hint="@string/phone"
        android:inputType="phone"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateUsername"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/updateAddress"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/c_input2"
        android:drawableStart="@drawable/c_address"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/proximar"
        android:hint="@string/address"
        android:inputType="textPersonName"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:maxLength="30"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updatePhone"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:backgroundTint="#40C58C"
        android:fontFamily="@font/proximar"
        android:padding="0dp"
        android:text="@string/update"
        android:textSize="14sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateAddress"
        app:layout_constraintVertical_bias="0.222" />

    <TextView
        android:id="@+id/btnchangepw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proximar"
        android:padding="0dp"
        android:text="@string/changepw"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpdate"
        app:layout_constraintVertical_bias="0.144" />

    <ImageView
        android:id="@+id/imageDP"
        android:layout_width="134dp"
        android:layout_height="137dp"
        android:src="@drawable/ic_fullname_focused"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/changedp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/proximar"
        android:text="@string/changedp"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDP"
        app:layout_constraintVertical_bias="0.017" />

    <com.agrawalsuneet.dotsloader.loaders.LazyLoader
        android:id="@+id/progressBar"
        android:layout_width="27dp"
        android:layout_height="21dp"
        android:layout_margin="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnUpdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updatePhone"
        app:layout_constraintVertical_bias="1.0"
        app:lazyloader_animDur="400"
        app:lazyloader_dotsDist="2dp"
        app:lazyloader_dotsRadius="5dp"
        app:lazyloader_firstDelayDur="100"
        app:lazyloader_firstDotColor="@color/darkgray2"
        app:lazyloader_interpolator="@android:anim/decelerate_interpolator"
        app:lazyloader_secondDelayDur="200"
        app:lazyloader_secondDotColor="@color/darkgray2"
        app:lazyloader_thirdDotColor="@color/darkgray2"/>


</androidx.constraintlayout.widget.ConstraintLayout>